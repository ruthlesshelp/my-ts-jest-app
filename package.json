{
  "name": "my-ts-jest-app",
  "version": "1.0.0",
  "bin": {
    "tally": "./dist/src/cli.js"
  },
  "scripts": {
    "build": "npm run format && npm run lint && tsc",
    "format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\" \"*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"__tests__/**/*.ts\" \"*.{js,json,md}\"",
    "lint": "eslint src/**/*.ts __tests__/**/*.ts --fix",
    "test": "npm run build && jest",
    "test:bdd": "jest __tests__/*.steps.ts",
    "test:unit": "jest __tests__/*.test.ts",
    "prepare": "npm run build"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.4.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "jest-cucumber": "^4.5.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0"
  }
}
